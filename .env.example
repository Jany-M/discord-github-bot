# Discord GitHub Bot Environment Variables

# Required: Discord Bot Token
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Required: GitHub OAuth App Credentials
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Required: GitHub Webhook Secret
# Generate a random string using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Required: Encryption Key for GitHub tokens (must be 32+ characters)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters

# Required: Base URL for OAuth callbacks and webhooks
# Local development: http://localhost:3000
# Local with ngrok: https://your-ngrok-url.ngrok.io
# Production (Render): https://your-app.onrender.com
BASE_URL=http://localhost:3000

# Optional: Session Secret for session management
# If not provided, a random secret will be auto-generated
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# Optional: Port to run the bot on (defaults to 3000)
PORT=3000

# Optional: Node environment
# Set to 'production' for cloud deployments
NODE_ENV=development

# Optional: Redis URL for session storage (required for production on Render)
# Get from Render Redis instance connection string
# Example: redis://default:password@hostname:port
# If not provided, falls back to in-memory session storage (not recommended for multi-instance production)
REDIS_URL=
